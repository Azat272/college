<Window x:Class="CollegeApp.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить студента" Height="300" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Фамилия"/>
        <TextBox x:Name="lastNameTb"/>

        <TextBlock Text="Имя"/>
        <TextBox x:Name="firstNameTb"/>

        <TextBlock Text="Группа"/>
        <ComboBox x:Name="groupComboBox" DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <Button Content="Добавить" Click="AddBtn_Click" Margin="10"/>
    </StackPanel>
</Window>
